package org.anveshgadde.inputreverse;

import java.io.Console;
import java.util.Scanner;

/**
 * @author anveshg
 *
 */

public class ReverseInput {
	public static void main(String[] args) {

		System.out.print("Enter the type of variable to be reversed: ");

		StringBuilder sbr = null;

		Console cs = System.console();

		cs.readLine();

		if (cs.readLine().toLowerCase().charAt(0) == 's') {
			System.out.println("Enter the string to be reversed: ");
			String str = cs.readLine();

			sbr = sbr.append(str).reverse();
			System.out.println("Reversed string value: " + sbr.toString());
		} else if (cs.readLine().toLowerCase().charAt(0) == 'i') {
			System.out.println("Enter the integer to be reversed: ");
			String revInt = cs.readLine();

			sbr = sbr.append(revInt).reverse();
			System.out.println("Reversed integer value: " +Integer.toString(sbr.toString()));

		}

	}

}
