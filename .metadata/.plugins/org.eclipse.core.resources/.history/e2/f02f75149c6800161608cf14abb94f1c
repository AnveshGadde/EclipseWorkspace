package org.anveshgadde.filestream;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;

/**
 * @author anveshg
 *
 */
public class ReadWrite {

	public static void main(String[] args) {

		try {
			FileInputStream fis = new FileInputStream("C:\\Users\\anveshg\\Desktop\\ntd.txt");
			FileOutputStream fos = new FileOutputStream("C:\\Users\\anveshg\\Desktop\\OutputStream.java");

			System.out.println("Reading file: " + fis.read());
			int i = 0;

			if ((i = fis.read()) != -1) {
				fos.write(i);
				System.out.println("Success");
			} else {
				System.out.println("Failed to generate!");
			}

			fis.close();
			fos.close();
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
