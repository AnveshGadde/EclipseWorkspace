package org.anveshgadde.palindromecheck;

import java.util.Scanner;

public class PaliCheck {

	public static void main(String[] args) {

		System.out.println("Enter the number to check...........");

		Scanner scan = new Scanner(System.in);
		int numb = scan.nextInt();
		scan.close();


		String result = (new StringBuilder(String.valueOf(numb)).reverse() == new StringBuilder(String.valueOf(numb)))) ? "a Palindrome number" : "Not a palindrome number";

		System.out.println("Entered number " + numb + " is " + result);
	}

}
